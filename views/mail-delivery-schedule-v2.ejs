<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css?ver=6" />
    <%- include('./vendors.ejs') %>
    <title>Mail Delivery Schedule Table</title>
  </head>

  <body>
    <div class="container">
      <div class="d-flex justify-content-between my-4 headers">
        <div class="btn-group" role="group">
          <button
            type="button"
            class="btn btn-light"
            onclick="location.href='/'"
          >
            <i class="bi bi-house-fill" style="color: #0d6efd"></i>
          </button>

          <button
            type="button"
            class="btn btn-light p-2"
            id="getServerStatus"
            data-bs-toggle="modal"
            data-bs-target="#serverStatus"
          >
            <i class="bi bi-hdd-rack"></i> 서버 상태
          </button>
        </div>
      </div>

      <table
        id="delivery-table"
        class="table align-middle table-striped table-bordered mx-auto"
      >
        <!-- <table id="delivery-table"> -->
        <thead>
          <tr style="vertical-align: middle">
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>ID</th>
            <th>등록</th>
            <th>시작</th>
            <th>완료</th>
            <th>예약</th>
            <th>상태</th>
            <th>읽음</th>
          </tr>
        </tfoot>
      </table>
    </div>

    <div
      class="modal fade"
      id="serverStatus"
      tabindex="-1"
      aria-labelledby="serverStatusModalLabel"
      aria-hidden="true"
    >
      <div
        class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable"
      >
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="serverStatusModalLabel">
              Server Status
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body"></div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- <script src="/mail_delivery.bundle.js" type="text/javascript"></script> -->
    <style>
      th {
        text-align: center !important;
        word-break: keep-all;
      }
    </style>
    <script
      src="/js/mail-delivery-common.js?ver=5"
      type="text/javascript"
    ></script>
    <script src="/js/mail-delivery-schedule-v2.js?ver=5"></script>
    <script src="/js/server-state.js?ver=1" type="text/javascript"></script>
  </body>
</html>
